<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@color/background_page"
    android:gravity="center">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Подтверждение"
        android:textSize="28sp"
        android:fontFamily="sans-serif-medium"
        android:textColor="@color/black"
        android:gravity="center"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Введите 6-значный код, отправленный на вашу почту"
        android:textSize="16sp"
        android:textColor="@color/gray2"
        android:gravity="center"
        android:layout_marginBottom="32dp" />

    <com.chaos.view.PinView
        android:id="@+id/pinView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:itemCount="6"
        app:itemSpacing="8dp"
        app:itemHeight="56dp"
        app:itemWidth="45dp"
        app:lineWidth="2dp"
        app:lineColor="@color/blue"
        app:viewType="rectangle"
        android:inputType="number"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:cursorVisible="true"
        app:cursorColor="@color/blue" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Не получили код? "
            android:textColor="@color/gray2"/>
        <TextView
            android:id="@+id/resendAfter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Отправить снова"
            android:textColor="@color/blue"
            android:textStyle="bold"
            android:clickable="true"
            android:focusable="true" />
    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/SetNewPass"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginTop="32dp"
        android:text="Проверить"
        android:textStyle="bold"
        app:cornerRadius="12dp"
        android:backgroundTint="@color/blue" />

</LinearLayout>