<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".ui.auth.ForgotPasswordActivity">

    <TextView
        android:id="@+id/forgottextView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/proggy_vector_dotted"
        android:text="Forgot Password"
        android:textColor="@color/gray"
        android:textSize="24sp"
        />

    <TextView
        android:id="@+id/forgottextView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="15dp"
        android:text="Enter your email address"
        android:textColor="@color/gray2"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/forgottextView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:fontFamily="@font/proggy_vector_dotted"
        android:text="Email Address"
        android:textColor="@color/gray2"
        android:textSize="16sp" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/forgotEmailAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="10dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/forgotEmailAddressField"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:fontFamily="@font/proggy_vector_dotted"
            android:inputType="textEmailAddress"
            android:paddingTop="10dp"
            android:text="hadtrist@mail.ru"
            android:textColor="@color/gray2"
            android:textSize="14sp" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_forgot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="15dp"
        app:cornerRadius="4dp"
        android:backgroundTint="@color/gray2"
        android:text="Send OTP" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/forgottextView16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Remember password? Back to "
            android:textColor="@color/gray2"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/forgottextView17"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="signin2"
            android:text="Sign in"
            android:textColor="@color/blue"
            android:textSize="14sp"
             />
    </LinearLayout>

</LinearLayout>